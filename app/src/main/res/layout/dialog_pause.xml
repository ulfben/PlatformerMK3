<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_gravity="center"
                android:background="@drawable/dialog_bg"
                android:layout_width="@dimen/dialog_width"
                android:layout_height="@dimen/dialog_height">
    <TextView
        android:id="@+id/pause_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        style="@android:style/TextAppearance.Large"
        android:text="@string/pause_dialog_title"/>

    <TextView
        android:id="@+id/pause_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pause_dialog_title"
        android:layout_centerHorizontal="true"
        style="@android:style/TextAppearance.Small"
        android:text="@string/pause_dialog_message"/>

    <TableRow
        android:id="@+id/first_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <ImageView
        style="@style/iconButton"
        android:id="@+id/btn_resume"
        android:src="@drawable/ic_play_circle_outline_black_24dp"
        android:layout_above="@+id/textView"
        android:layout_toLeftOf="@+id/pause_dialog_message"
        android:layout_toStartOf="@+id/pause_dialog_message"/>

    <ImageView
        style="@style/iconButton"
        android:id="@+id/btn_exit"
        android:src="@drawable/ic_exit_to_app_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_accelerometer"
        android:layout_toStartOf="@+id/btn_accelerometer"/>

    <ImageView
        style="@style/iconButton"
        android:id="@+id/btn_accelerometer"
        android:src="@drawable/ic_screen_rotation_black_24dp"
        android:layout_below="@+id/pause_dialog_message"
        android:layout_centerHorizontal="true"/>

    <ImageView
        style="@style/iconButton"
        android:id="@+id/btn_sound"
        android:src="@drawable/sounds_on_no_bg"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/pause_dialog_message"
        android:layout_toEndOf="@+id/pause_dialog_message"/>

    <ImageView
        style="@style/iconButton"
        android:id="@+id/btn_music"
        android:src="@drawable/music_on_no_bg"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_accelerometer"
        android:layout_toEndOf="@+id/btn_accelerometer"/>
   </TableRow>


</RelativeLayout>